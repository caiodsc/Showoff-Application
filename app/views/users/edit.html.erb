<h1>Editing User</h1>

<%= render 'form', user: @user %>

<%= form_with(model: widget, local: true) do |form| %>
	<% if widget.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= pluralize(widget.errors.count, "error") %> prohibited this widget from being saved:</h2>

	    <ul>
	    <% widget.errors.full_messages.each do |message| %>
	      <li><%= message %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

	<div class="row">
	  <div class="col-25">
	    <label for="name">Name</label>
	  </div>
	  <div class="col-75">
	    <%= form.text_field :name, class: "form-control", placeholder: "Name",required: true  %>
	  </div>
	</div>

	<div class="row">
	  <div class="col-25">
	    <label for="description">Description</label>
	  </div>
	  <div class="col-75">
	    <%= form.text_field :description, class: "form-control", placeholder: "Description",required: true  %>
	  </div>
	</div>

	<div class="row">
	  <div class="col-25">
	    <label for="kind">Kind</label>
	  </div>
	  <div class="col-75">
	    <%= form.select "kind", options_for_select([ "visible", "hidden" ], "visible"), { :class => 'my_style_class' }, required: true  %>
	  </div>
	</div>

	<div class="actions">
	  <%= form.submit "Create Widget", class: "form-submit" %>
	</div>
<% end %>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
