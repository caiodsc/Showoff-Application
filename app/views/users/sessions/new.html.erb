<h2><center>Log in</center></h2>
<div class="container">
  
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-25">
      <label for="fname">Email:</label>
    </div>
    <div class="col-75">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form_input' %>
    </div>
  </div>

  <div class="row">
    <div class="col-25">
      <label for="fname">Password:</label>
    </div>
    <div class="col-75">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form_input' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "form-submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>