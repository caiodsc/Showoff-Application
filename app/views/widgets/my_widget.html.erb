<h1 style="text-align: center;"><u>My Widgets</u></h1>

<%= form_tag(search_path, method: :post, :class => "form-inline search_button") do %>
  <%= text_field_tag(:search, params[:search], :class => "form-control mr-sm-2", :placeholder=>"Search" ) %>
  <%= submit_tag("Search", :class=>"btn btn-outline-success my-2 my-sm-0") %>
<% end %>

<%= render 'navigation/widgets_list', locale => {widgets: @widgets} %>
